# SISTEMA
alias h=history
alias psa="ps aux"
alias df="df -h"
alias duf="du -h --max-depth=1"
alias tree="tree -C"
alias nn="nvim"

# Utilidades de Sistema
alias h='history'                       # Muestra el historial de comandos
alias hgr='history | grep'              # Busca rápidamente en el historial (ej: hgr docker)
alias ip='ip a'                         # Muestra direcciones IP y configuración de interfaces de red
alias ports='sudo ss -tulpn'            # Muestra todos los puertos abiertos (sustituto de netstat)
alias psa='ps aux'                      # Muestra todos los procesos en ejecución
alias df='df -h'                        # Muestra el espacio libre en disco en formato legible
alias duf='du -h --max-depth=1'         # Muestra el uso de disco por subdirectorio (resumido)
alias tree='tree -C'                    # Muestra la estructura de directorios en formato árbol (Requiere 'tree')

